{
  "name": "Twork",
  "version": "1.0.1",
  "description": "Master Electron Course Code",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "mac": "electron-builder -m",
    "win": "electron-builder -w",
    "build": "electron-builder -mwl",
    "watch": "nodemon --exec 'electron .'",
    "reset": "git reset --hard",
    "publish": "electron-builder build -mwl -p onTagOrDraft"
  },
  "build": {
    "appId": "com.electron.twork",
    "directories": {
      "buildResources": "."
    },
    "mac": {
      "category": "public.app-category.productivity",
      "publish": [
        "github"
      ]
    },
    "win": {
      "certificateFile": "private/electron-twork-app.p12",
      "verifyUpdateCodeSignature": false,
      "publish": [
        "github"
      ]
    },
    "linux": {
      "category": "Network",
      "publish": [
        "github"
      ]
    }
  },
  "repository": "https://github.com/Nitingadhiya/electron-twork-app",
  "keywords": [
    "Electron",
    "Twork"
  ],
  "author": "GitHub, Nitingadhiya - Twork",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^5.0.10",
    "electron-builder": "^22.3.2",
    "nodemon": "^1.19.2"
  },
  "dependencies": {
    "electron-log": "^4.0.4",
    "electron-updater": "^4.2.0",
    "jquery": "^3.4.1",
    "query-string": "^6.10.1"
  }
}
